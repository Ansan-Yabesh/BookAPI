# MongoDB
MONGODB_URI=mongodb://localhost:27017/BookAPI

# JWT Secret
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production

# Email Configuration (Nodemailer)
# Using Gmail: Enable 2FA and generate an App Password
# Using other SMTP: Get credentials from your email provider

# SMTP Server Host (e.g., smtp.gmail.com, smtp.office365.com, smtp.mailtrap.io)
SMTP_HOST=smtp.gmail.com

# SMTP Server Port (587 for TLS, 465 for SSL)
SMTP_PORT=587

# SMTP Username (usually your email address)
SMTP_USER=your_email@gmail.com

# SMTP Password (for Gmail, use App Password if 2FA is enabled)
SMTP_PASS=your_app_password_here

# Sender Email (the email address that appears in "From" field)
SENDER_EMAIL=noreply@bookapi.com

# Server Port
PORT=3000
